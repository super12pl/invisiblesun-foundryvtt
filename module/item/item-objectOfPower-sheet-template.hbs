<form class='{{cssClass}}' autocomplete='off' style="position: relative;">
  <header class='sheet-header'>
    <img class='profile-img' src='{{item.img}}' data-edit='img' title='{{item.name}}' />
    <div class='header-fields'>
      <h1 class='charname'><input name='name' type='text' value='{{item.name}}' placeholder='Name' /></h1>
      <div class='grid grid-2col'>
        <div class='resource'>
          <label class='resource-label'>Level</label>
          <input type='text' name='system.level' value='{{system.level}}' data-dtype='Number' />
        </div>
        <div class='resource'>
          <label class='resource-label'>Object depletion</label>
          <input type='text' name='system.depletion' value='{{system.depletion}}' placeholder="0,1,2..." />
        </div>
        <div class='resource'>
          <label class='resource-label'>Effect depletion</label>
          <input type='text' name='system.effectDepletion' value='{{system.effectDepletion}}' placeholder="0,1,2..." />
        </div>
        <div class='resource'>
          <label class='resource-label'>+1 die</label>
          <input type='checkbox' name='system.addDie' {{#if system.addDie}}checked {{/if}} />
        </div>
        <div class='resource'>
          <label class='resource-label'>Color</label>
          <input type='text' name='system.color' value="{{system.color}}" />
        </div>
      </div>
    </div>
  </header>

  {{! Sheet Tab Navigation }}
  <nav class='sheet-tabs tabs' data-group='primary'>
    <a class='item' data-tab='description'>Description</a>
  </nav>

  {{! Sheet Body }}
  <section class='sheet-body'>

    {{! Description Tab }}
    <div class='tab' data-group='primary' data-tab='description'>
      {{! Editors must receive enriched text data from getData to properly handle rolls }}
      {{editor system.description target="system.description" button=true engine='prosemirror' owner=owner
      editable=true}}
    </div>
  </section>
</form>